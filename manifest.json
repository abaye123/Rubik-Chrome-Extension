{
    "manifest_version": 3,
    "name": "Rubik",
    "version": "1.0",
    "description": "קובע פונט Rubik בגודל 11 כברירת מחדל בג'ימייל",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon48.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon48.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://mail.google.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage"
    ]
}
